

 <div class="panel panel-default">

<div class="row">
<% @answers.each_with_index do |answer, index| %>
  
<div class="col-xs-6 col-md-4">
 
  <div class="panel-heading">
    <h3 class="panel-title text-center"> <%= answer.first.text %> 

    </h3>
  </div>
  <div class="panel-body text-center">
  <% if index == 0
  		image = "http://upload.wikimedia.org/wikipedia/en/a/a4/Flag_of_the_United_States.svg"
     elsif index == 1 
 		image =  "http://upload.wikimedia.org/wikipedia/commons/4/49/Flag_of_Ukraine.svg"
     else 
      	image = "http://upload.wikimedia.org/wikipedia/en/f/f3/Flag_of_Russia.svg"
    end %>
  	<%= link_to image_tag(image, style: "border:1px solid black;", width: "100px", height: "50px"), pollers_path(:answer_id => answer.first.answer_id), :method => :post  %> 
  </div>

  </div>

<% end %>
</div>
</div>
